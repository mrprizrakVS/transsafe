@import 'variables.styl'
@import 'fonts.styl'

body
  background-color $gray
  font-family 'RobotoCondensed-Regular'
  font-size 90%
  overflow-y scroll

*, *:before, *:after
  box-sizing border-box

.main-wrapper
  width 80%
  margin 0 auto
  max-width 1080px

.main-header
  display flex
  align-items center
  justify-content space-between
  border-bottom 10px solid $green
  background-color $white

.main-header-nav
  flex 1
  display flex
  justify-content flex-end
  align-items center
  font-size: 80%
  .nav-btn
    display inline-block
    padding 11px 15px
    text-decoration none
    color $dark-gray
    text-transform uppercase
    background-color $light-gray
    cursor pointer
    &:hover
      color $green

.ui.dropdown
  position relative
  &:hover > ul.menu
    opacity 1
    visibility visible
  > ul.menu
    width calc(100% + 2px)
    position absolute
    left -1px
    padding 0
    border-top 1px solid rgba(154, 166, 178, 0.11)
    background-color $light-gray
    list-style none
    border 2px solid #fff
    opacity 0
    visibility hidden
    li
      margin-left 0
    a
      display block
      padding 13px 7px
      color $dark-gray
      text-decoration none
      font-size 110%
      cursor pointer
      &:hover
        background-color rgba(154, 166, 178, 0.11)
        color $green

.main-nav-list
  display flex
  flex 1
  list-style none
  justify-content flex-end
  li
    margin-left 2%

.container
  padding 1.5% 3%

.main-logo
  display block
  width 8%
  color $green

.header-sign-list
  display flex
  list-style none
  li:last-child
    border-left 1px solid #e0e2e4

.not-found-wrap
  font-size 150%
  text-align center;
  color $dark
  .status-code
    display block

.registration-types .item-dropdown
  font-size 80%

.btn.btn-primary
  padding 1% 2%
  background-color $dark
  color $white
  border none
  border-radius 4px
  font-size 90%
  &:hover
    background-color #4c5e6f

.btn-light-gray
  padding 3%
  display inline-block
  background-color $light-gray
  color $dark-gray
  text-decoration none
  cursor pointer
  &:hover
    background-color #edecec

.card-sect
  background-color $white
  border-radius 4px
  box-shadow 0 1px 0 0 #d7d8db, 0 0 0 1px #e3e4e8
  form > .panel-default:not(:first-of-type)
    padding-top 2%
    margin-top 2%
    border-top 1px solid $gray
  .form-group
    margin-bottom 2%
    label
      display block
      margin-bottom 3px
      color $dark
    input, select
      display block
      width 100%
      height 36px
      border 3px solid $gray
      border-radius 4px
      padding 0 1%
      background-color transparent
      &:focus
        outline none

.card-inner-sect
  padding 0 2% 2% 2%

.u-profile-edit-sect
  padding 2%

.card-sect-title
  padding 2%
  border-top-right-radius 4px
  border-top-left-radius 4px
  background-color $dark
  color $white
  font-size 98%


.basic-link
  color $green

.panel-body
  > .help-block
    display none

.form-group.has-error
  > .help-block
    display block
    padding 0.5%
    background-color rgba(188, 0, 0, 0.14)
    margin-top 1%
    border-radius 2px
    font-size 84%
    color rgba(96, 125, 139, 0.58)

.message-state-value
  text-align center


// User account profile

.user-account-profile-wrap
  display flex

.user-a-profile-sidebar
  width 25%
  margin-right 2%

.user-a-profile-photo
  max-width 100%
  height auto
  border-radius 50%

.u-profile-sect
  padding 4%

.main-content-wrap-u-p
  flex 1

.user-profile-title,
.card-title-w-m
  padding 4%
  margin 0

.u-profile-sect
  margin-bottom 5%

.profile-acts-btns
  display flex

.profile-edit-btn
  display block
  flex 1
  text-align center
  &:not(:first-child)
    margin-left 2%

.user-a-profile-photo-wrap
  position relative
  border-top-left-radius 0
  border-top-right-radius 0

.profile-full-name
  margin 0
  padding 2%
  font-weight normal

.upload-u-profile-photo
  input[type="file"]
    display none

.upload-progress
  height 5px
  position absolute
  bottom 0
  left 0
  background-color $dark-gray